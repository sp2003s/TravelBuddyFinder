<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MY PROFILE</title>
    <link rel="icon" type="image/x-icon" href="./images/brand-icon/logo-big.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <!-- <link rel="stylesheet" href="./styles/myprofile.css"> -->
    <link rel="stylesheet" href="/styles/myprofile.css">
</head>
<body>
    <div class="header">
        <br>
        <h1 class="h1st">Travel Buddy Finder</h1>


        <nav style="float: right; margin-top: 20px;">
            <a href="/about">ABOUT US</a>
            <a href="/faq">FAQ'S</a>
            <a href="/contact">CONTACT US</a>
            <span class="profile">
                <% if(name){ %>
                    <img src="./images/user-symbol.png" style="width: 30px; margin-right: 10px;" alt=""><span class="username"><%=name%></span>
                <% } else { %>
                    <img src="./images/user-symbol.png" style="width: 30px; margin-right: 10px;" alt=""><span class="username">USERNAME</span>
                <% } %>
                
                <div class="dropdown-content">
                    <a href="/myprofile">My Profile</a>
                    <a href="/requesthistory">My Requests</a>
                    <a href="/LikedRequest">Liked Requests</a>
                    <a href="/logout" class="logout-btn">Log-Out</a>
                    
                </div>
            </span>
        </nav><hr>
    </div>

    <br><br>

    <div class="container-fluid cnt">
        <div class="row" style="height: 100%;">
            <div class="col-md-2 section1">
				<div class="row">
					<div class = "col-md-12 section-header">Other Options</div> <br><br><br><br>
				</div>
                <a href="/requesthistory" class="options">Request History</a> <br> <br>
                <a href="/LikedRequest" class="options">Liked Requests</a><br><br>
                <a href="/changepass" class="options">Change Password</a> <br> <br>
				<a href="/logout" class="options">Log-Out</a>
                
            </div>


            <div class="col-md-10 section2"> 
				
				<div class="info-sec">
					
					<div class="row">
                        <div class = "col-md-12 section-header">Personal Details</div> <br><br><br><hr style="margin: 0px 0px 0 40px; width: 92%;"><br>
                    </div>
                    <%if(Message){%>
                        <p style="color: red; font-size: 1.2em; text-align: center;"><%=Message%></p>
                    <%}%>
                    <div class="info-sec" style="width: 85%;">
                        <a style="float: right; color: rgb(0, 148, 253);" onclick="EditDetails(this)">Edit Details</a>
                        <br>
                        <%if(data){ %>
                            <div class="row">
                                <div class="col-md-6 details">NAME: &nbsp;&nbsp; <%=data.Name%></div>
                                <div class="col-md-6 details">Email: &nbsp; &nbsp;<%=data.Email%></div>
                            </div>
                            <br>
                            <div class="row">
                                <div class="col-md-6 details">Contact No: &nbsp;&nbsp; <%=data.Contact%></div>
                                <div class="col-md-6 details">Gender: &nbsp;&nbsp;<%=data.Gender%></div>
                            </div>
                        <%} else{ %>
                            <div class="row">
                                <div class="col-md-6 details">NAME</div>
                                <div class="col-md-6 details">Email</div>
                            </div>
                            <br>
                            <div class="row">
                                <div class="col-md-6 details">Contact No.</div>
                                <div class="col-md-6 details">Gender</div>
                            </div>
                        <%}%>
				</div>
                
            </div>
        </div>
        <a href="/backhome" class="options home-link" style="float: left;">&#8592; Back to Home</a> <br> <br>
    </div>
	
    <script>

        function EditDetails(button) {
                    const taskContainer = button.parentElement;
                    if (taskContainer.querySelector('#form-e')) {
                        return;
                    }
                    const newTaskHTML = `   <form action="editDetails" method="post" id="form-e">
                                                <div class="row">
                                                    <div class="col-md-6 details">NAME: &nbsp;&nbsp; <input type="text" name="name" placeholder="Enter your name" style="width: 50%;border-radius: 6px;border: solid black 1px;background-color: rgba(255, 255, 255, 0.871);color: black;"></div>
                                                    <div class="col-md-6 details">Email: &nbsp; &nbsp;<%=data.Email%></div>
                                                </div>
                                                <br>
                                                <div class="row">
                                                    <div class="col-md-6 details">Contact No: &nbsp;&nbsp; <input type="number" name="contact" placeholder="Enter conatct no" style="width: 40%;border-radius: 6px;border: solid black 1px;background-color: rgba(255, 255, 255, 0.871);color: black;"></div>
                                                    <div class="col-md-6 details">Gender: &nbsp;&nbsp;
                                                        <select name="gender">
                                                            <option>Gender</option>
                                                            <option value="Male" >Male</option>
                                                            <option value="Female">Female</option>
                                                            <option value="Others">Others</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <br>
                                                <button type="submit" class="form-but">Update</button>
                                                
                                            </form>
                    
                    `
                    taskContainer.outerHTML = newTaskHTML;
    }
    </script>
</body>
</html>